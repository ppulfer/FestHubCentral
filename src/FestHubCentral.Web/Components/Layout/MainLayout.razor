@using FestHubCentral.Web.Services.Interfaces
@using FestHubCentral.Web.Data.Models
@using FestHubCentral.Web.Components.Shared
@inject IBrandingService BrandingService
@inherits LayoutComponentBase

@if (brandingSettings != null)
{
    <div class="page" style="--brand-primary: @brandingSettings.PrimaryColor; --brand-secondary: @brandingSettings.SecondaryColor; --brand-accent: @brandingSettings.AccentColor;">
        <div class="sidebar">
            <NavMenu BrandingSettings="@brandingSettings" />
        </div>

        <main>
            <div class="top-row px-4 d-flex justify-content-between align-items-center">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
                <LanguageSwitcher />
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}
else
{
    <div class="page">
        <p>Loading...</p>
    </div>
}

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private BrandingSettings? brandingSettings;

    protected override async Task OnInitializedAsync()
    {
        brandingSettings = await BrandingService.GetBrandingSettingsAsync();
    }
}
