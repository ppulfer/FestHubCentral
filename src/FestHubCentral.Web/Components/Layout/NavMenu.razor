@using FestHubCentral.Web.Data.Models
@using Microsoft.AspNetCore.Components.Authorization
@inject IStringLocalizer<SharedResources> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="" title="@(Settings?.FestivalName ?? "FestHub Central")">
            @if (!string.IsNullOrEmpty(Settings?.LogoPath))
            {
                <img src="@Settings.LogoPath" alt="Logo" class="brand-logo" />
            }
            else
            {
                <span class="brand-icon">ðŸŽª</span>
            }
            @if (!IsCollapsed)
            {
                <span class="brand-text">@(Settings?.FestivalName ?? "FestHub Central") @(Settings?.CurrentEventYear ?? DateTime.UtcNow.Year)</span>
            }
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable">
    <nav class="nav flex-column">
        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All" title="Dashboard">
                    <i class="bi bi-speedometer2"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">@Localizer["Nav.Dashboard"]</span>
                    }
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="locations" title="Locations">
                    <i class="bi bi-geo-alt-fill"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">@Localizer["Nav.Vendors"]</span>
                    }
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="inventory" title="Inventory">
                    <i class="bi bi-box-seam"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">@Localizer["Nav.Inventory"].Value</span>
                    }
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="inventory-transfers" title="Inventory Transfers">
                    <i class="bi bi-arrow-left-right"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">@Localizer["Nav.InventoryTransfers"].Value</span>
                    }
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="settings" title="Settings">
                    <i class="bi bi-gear-fill"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">@Localizer["Nav.Settings"].Value</span>
                    }
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="account/register" title="Register User">
                    <i class="bi bi-person-plus-fill"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">Register User</span>
                    }
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/transfer-requests" title="Transfer Requests">
                    <i class="bi bi-clipboard-check"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">Transfer Requests</span>
                    }
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="Location">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="location-dashboard" title="Location Dashboard">
                    <i class="bi bi-building"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">Location Dashboard</span>
                    }
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="location-transfer-request" title="Request Transfer">
                    <i class="bi bi-cart-plus"></i>
                    @if (!IsCollapsed)
                    {
                        <span class="nav-text">Request Transfer</span>
                    }
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>

    <div class="sidebar-bottom">
        <button class="sidebar-toggle-btn" @onclick="HandleToggleSidebar" title="Toggle Sidebar">
            <i class="bi bi-list"></i>
            @if (!IsCollapsed)
            {
                <span class="toggle-text">Collapse</span>
            }
        </button>
    </div>
</div>

@code {
    [Parameter]
    public Settings? Settings { get; set; }

    [Parameter]
    public bool IsCollapsed { get; set; }

    [Parameter]
    public EventCallback OnToggleSidebar { get; set; }

    private async Task HandleToggleSidebar()
    {
        await OnToggleSidebar.InvokeAsync();
    }
}
