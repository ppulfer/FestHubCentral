@using FestHubCentral.Web.Data.Models
@using Microsoft.AspNetCore.Components.Authorization
@inject IStringLocalizer<SharedResources> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="">
            @if (!string.IsNullOrEmpty(Settings?.LogoPath))
            {
                <img src="@Settings.LogoPath" alt="Logo" style="height: 32px; width: auto;" />
            }
            else
            {
                <span>ðŸŽª</span>
            }
            <span>@(Settings?.FestivalName ?? "FestHub Central") @(Settings?.UpcomingEventYear ?? DateTime.UtcNow.Year)</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @Localizer["Nav.Dashboard"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="vendors">
                <span class="bi bi-shop-nav-menu" aria-hidden="true"></span> @Localizer["Nav.Vendors"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="inventory">
                <span class="bi bi-box-seam-nav-menu" aria-hidden="true"></span> @Localizer["Nav.Inventory"].Value
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="orders">
                <span class="bi bi-receipt-nav-menu" aria-hidden="true"></span> @Localizer["Nav.Orders"].Value
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cash-registers">
                <span class="bi bi-cash-coin-nav-menu" aria-hidden="true"></span> @Localizer["Nav.CashRegisters"].Value
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="alerts">
                <span class="bi bi-exclamation-triangle-nav-menu" aria-hidden="true"></span> @Localizer["Nav.Alerts"].Value
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <span class="bi bi-gear-nav-menu" aria-hidden="true"></span> @Localizer["Nav.Settings"].Value
            </NavLink>
        </div>

        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="account/register">
                    <span class="bi bi-person-plus-nav-menu" aria-hidden="true"></span> Register User
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>

@code {
    [Parameter]
    public Settings? Settings { get; set; }
}
