        <a class="navbar-brand d-flex align-items-center gap-2" href="">
            @if (!string.IsNullOrEmpty(BrandingSettings?.LogoPath))
            {
                <img src="@BrandingSettings.LogoPath" alt="Logo" style="height: 32px; width: auto;" />
            }
            else
            {
