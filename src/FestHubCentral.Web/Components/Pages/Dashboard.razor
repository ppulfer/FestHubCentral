@page "/"
@using FestHubCentral.Web.Services.Interfaces
@using FestHubCentral.Web.Components.Shared
@using FestHubCentral.Web.Data.Models
@using Microsoft.AspNetCore.SignalR.Client
@inject IVendorService VendorService
@inject IOrderService OrderService
@inject IAlertService AlertService
@inject IInventoryService InventoryService
@inject IBrandingService BrandingService
@inject NavigationManager Navigation
@inject IStringLocalizer<SharedResources> Localizer
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>@Localizer["Dashboard.Title"] - @(brandingSettings?.FestivalName ?? "FestHub Central")</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>
                @if (!string.IsNullOrEmpty(brandingSettings?.LogoPath))
                {
                    <img src="@brandingSettings.LogoPath" alt="Logo" style="height: 48px; width: auto; margin-right: 12px;" />
                }
                else
                {
                    <span>ðŸŽª </span>
                }
                @(brandingSettings?.FestivalName ?? "FestHub Central") @Localizer["Dashboard.Title"]
            </h1>
            <p class="text-muted">@(brandingSettings?.Tagline ?? Localizer["Dashboard.Tagline"].Value)</p>
        </div>
    </div>

    <div class="dashboard-grid">
        <StatCard
            Icon="ðŸ’°"
            Value="@totalSales.ToString("C")"
            Label="@Localizer["Dashboard.TodaysSales"]"
            SubText="@($"{orderCount} {Localizer["Dashboard.Orders"]}")"
            CssClass="stat-card-success" />

        <StatCard
            Icon="ðŸª"
            Value="@openVendors.ToString()"
            Label="@Localizer["Dashboard.VendorsOpen"]"
            SubText="@($"{totalVendors} {Localizer["Dashboard.TotalVendors"]}")" />

        <StatCard
            Icon="ðŸ“¦"
            Value="@lowStockCount.ToString()"
            Label="@Localizer["Dashboard.LowStockItems"]"
            SubText="@Localizer["Dashboard.RequiresAttention"]"
            CssClass="@(lowStockCount > 0 ? "stat-card-warning" : "")" />

        <StatCard
            Icon="ðŸš¨"
            Value="@alertCount.ToString()"
            Label="@Localizer["Dashboard.ActiveAlerts"]"
            SubText="@Localizer["Dashboard.UnresolvedIssues"]"
            CssClass="@(alertCount > 0 ? "stat-card-danger" : "")" />
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="section-card">
                <h2 class="section-title">@Localizer["Dashboard.FestivalGroundsMap"]</h2>
                <div class="vendor-grid">
                    @for (int i = 1; i <= 15; i++)
                    {
                        var spot = i;
                        var vendor = vendors.FirstOrDefault(v => v.LocationSpot == spot);
                        <div class="vendor-spot @GetSpotClass(vendor)" @onclick="() => NavigateToVendor(vendor?.Id)">
                            <div class="vendor-spot-number">@Localizer["Dashboard.Spot"] @spot</div>
                            @if (vendor != null)
                            {
                                <div class="vendor-name">@vendor.Name</div>
                                <StatusBadge Text="@(vendor.IsOpen ? Localizer["Dashboard.Open"].Value : Localizer["Dashboard.Closed"].Value)" Status="@(vendor.IsOpen ? "open" : "closed")" />
                            }
                            else
                            {
                                <div class="text-muted">@Localizer["Dashboard.Available"]</div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="section-card">
                <h2 class="section-title">@Localizer["Dashboard.ActiveAlerts"]</h2>
                @if (alerts.Any())
                {
                    @foreach (var alert in alerts.Take(5))
                    {
                        <AlertCard Alert="@alert" OnResolve="ResolveAlert" />
                    }
                    @if (alerts.Count() > 5)
                    {
                        <a href="/alerts" class="btn btn-sm btn-outline-primary w-100">
                            @Localizer["Dashboard.ViewAllAlerts", alerts.Count()]
                        </a>
                    }
                }
                else
                {
                    <p class="text-muted">@Localizer["Dashboard.NoActiveAlerts"]</p>
                }
            </div>

            <div class="section-card mt-3">
                <h2 class="section-title">@Localizer["Dashboard.TopSellingProducts"]</h2>
                @if (topProducts.Any())
                {
                    <div class="list-group">
                        @foreach (var product in topProducts.Take(5))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@GetProductName(product)</span>
                                <span class="badge bg-primary rounded-pill">@GetProductQuantity(product)</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">@Localizer["Dashboard.NoSalesData"]</p>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private HubConnection? hubConnection;
    private BrandingSettings? brandingSettings;
    private List<Data.Models.Vendor> vendors = new();
    private List<Data.Models.Alert> alerts = new();
    private List<object> topProducts = new();
    private decimal totalSales = 0;
    private int orderCount = 0;
    private int openVendors = 0;
    private int totalVendors = 0;
    private int lowStockCount = 0;
    private int alertCount = 0;

    protected override async Task OnInitializedAsync()
    {
        brandingSettings = await BrandingService.GetBrandingSettingsAsync();
        await LoadData();
        await InitializeSignalR();
    }

    private async Task LoadData()
    {
        vendors = (await VendorService.GetAllVendorsAsync()).ToList();
        alerts = (await AlertService.GetUnresolvedAlertsAsync()).ToList();

        var today = DateTime.UtcNow.Date;
        var todayUtc = DateTime.SpecifyKind(today, DateTimeKind.Utc);

        topProducts = (await OrderService.GetTopSellingProductsAsync(10, todayUtc)).ToList();
        totalSales = await OrderService.GetTotalSalesByDateAsync(todayUtc);
        var allOrders = await OrderService.GetOrdersByDateRangeAsync(todayUtc, todayUtc.AddDays(1));
        orderCount = allOrders.Count();

        openVendors = vendors.Count(v => v.IsOpen);
        totalVendors = vendors.Count;

        var lowStockItems = await InventoryService.GetLowStockItemsAsync();
        lowStockCount = lowStockItems.Count();

        alertCount = alerts.Count;
    }

    private async Task InitializeSignalR()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/festivalhub"))
            .WithAutomaticReconnect()
            .Build();

        hubConnection.On<int, decimal, string>("ReceiveNewOrder", async (orderId, amount, vendorName) =>
        {
            await LoadData();
            await InvokeAsync(StateHasChanged);
        });

        hubConnection.On<int, string, int>("ReceiveLowStockAlert", async (productId, productName, currentStock) =>
        {
            await LoadData();
            await InvokeAsync(StateHasChanged);
        });

        hubConnection.On<int, bool>("ReceiveVendorStatusUpdate", async (vendorId, isOpen) =>
        {
            await LoadData();
            await InvokeAsync(StateHasChanged);
        });

        await hubConnection.StartAsync();
    }

    private string GetSpotClass(Data.Models.Vendor? vendor)
    {
        if (vendor == null) return "empty";
        return vendor.IsOpen ? "occupied open" : "occupied closed";
    }

    private void NavigateToVendor(int? vendorId)
    {
        if (vendorId.HasValue)
        {
            Navigation.NavigateTo($"/vendors/{vendorId}");
        }
    }

    private async Task ResolveAlert(int alertId)
    {
        await AlertService.ResolveAlertAsync(alertId, "Dashboard User");
        await LoadData();
    }

    private string GetProductName(object product)
    {
        var type = product.GetType();
        var nameProp = type.GetProperty("ProductName");
        return nameProp?.GetValue(product)?.ToString() ?? "";
    }

    private int GetProductQuantity(object product)
    {
        var type = product.GetType();
        var qtyProp = type.GetProperty("TotalQuantity");
        return (int)(qtyProp?.GetValue(product) ?? 0);
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}
