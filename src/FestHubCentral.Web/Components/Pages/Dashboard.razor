@page "/"
@using FestHubCentral.Web.Services.Interfaces
@using FestHubCentral.Web.Components.Shared
@using FestHubCentral.Web.Data.Models
@using Microsoft.AspNetCore.SignalR.Client
@inject ILocationService LocationService
@inject IOrderService OrderService
@inject IAlertService AlertService
@inject IInventoryService InventoryService
@inject ISettingsService SettingsService
@inject NavigationManager Navigation
@inject IStringLocalizer<SharedResources> Localizer
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>@Localizer["Nav.Dashboard"].Value - @(brandingSettings?.FestivalName ?? "FestHub Central") @(brandingSettings?.UpcomingEventYear ?? DateTime.UtcNow.Year)</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>
                @if (!string.IsNullOrEmpty(brandingSettings?.LogoPath))
                {
                    <img src="@brandingSettings.LogoPath" alt="Logo" style="height: 48px; width: auto; margin-right: 12px;" />
                }
                else
                {
                    <span>ðŸŽª </span>
                }
                @(brandingSettings?.FestivalName ?? "FestHub Central") @(brandingSettings?.UpcomingEventYear ?? DateTime.UtcNow.Year) @Localizer["Nav.Dashboard"].Value
            </h1>
            <p class="text-muted">@(brandingSettings?.Tagline ?? Localizer["Dashboard.Tagline"].Value)</p>
        </div>
    </div>

    <div class="dashboard-grid">
        <StatCard
            Icon="ðŸ’°"
            Value="@totalSales.ToString("C")"
            Label="@Localizer["Dashboard.TodaysSales"].Value"
            SubText="@($"{orderCount} {Localizer["Dashboard.Orders"]}")"
            CssClass="stat-card-success" />

        <StatCard
            Icon="ðŸª"
            Value="@totalLocations.ToString()"
            Label="@Localizer["Dashboard.TotalLocations"].Value"
            SubText="" />

        <StatCard
            Icon="ðŸ“¦"
            Value="@lowStockCount.ToString()"
            Label="@Localizer["Dashboard.LowStockItems"].Value"
            SubText="@Localizer["Dashboard.RequiresAttention"].Value"
            CssClass="@(lowStockCount > 0 ? "stat-card-warning" : "")" />

        <StatCard
            Icon="ðŸš¨"
            Value="@alertCount.ToString()"
            Label="@Localizer["Dashboard.ActiveAlerts"].Value"
            SubText="@Localizer["Dashboard.UnresolvedIssues"].Value"
            CssClass="@(alertCount > 0 ? "stat-card-danger" : "")" />
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="section-card">
                <h2 class="section-title">@Localizer["Dashboard.FestivalGroundsMap"].Value</h2>
                <div class="vendor-grid">
                    @for (int i = 1; i <= 30; i++)
                    {
                        var spot = i;
                        var location = locations.FirstOrDefault(v => v.LocationSpot == spot);
                        <div class="vendor-spot @GetSpotClass(location)" @onclick="() => NavigateToLocation(location?.Id)">
                            <div class="vendor-spot-number">@Localizer["Dashboard.Spot"].Value @spot</div>
                            @if (location != null)
                            {
                                <div class="vendor-name">@location.Name</div>
                            }
                            else
                            {
                                <div class="text-muted">@Localizer["Dashboard.Available"].Value</div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="section-card">
                <h2 class="section-title">@Localizer["Dashboard.ActiveAlerts"].Value</h2>
                @if (alerts.Any())
                {
                    @foreach (var alert in alerts.Take(5))
                    {
                        <AlertCard Alert="@alert" OnResolve="ResolveAlert" />
                    }
                    @if (alerts.Count() > 5)
                    {
                        <a href="/alerts" class="btn btn-sm btn-outline-primary w-100">
                            @Localizer["Dashboard.ViewAllAlerts", alerts.Count()]
                        </a>
                    }
                }
                else
                {
                    <p class="text-muted">@Localizer["Dashboard.NoActiveAlerts"].Value</p>
                }
            </div>

            <div class="section-card mt-3">
                <h2 class="section-title">@Localizer["Dashboard.TopSellingProducts"].Value</h2>
                @if (topProducts.Any())
                {
                    <div class="list-group">
                        @foreach (var product in topProducts.Take(5))
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@GetProductName(product)</span>
                                <span class="badge bg-primary rounded-pill">@GetProductQuantity(product)</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">@Localizer["Dashboard.NoSalesData"].Value</p>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private HubConnection? hubConnection;
    private Data.Models.Settings? brandingSettings;
    private List<Data.Models.Location> locations = new();
    private List<Data.Models.Alert> alerts = new();
    private List<object> topProducts = new();
    private decimal totalSales = 0;
    private int orderCount = 0;
    private int totalLocations = 0;
    private int lowStockCount = 0;
    private int alertCount = 0;
    private readonly SemaphoreSlim _loadDataSemaphore = new(1, 1);

    protected override async Task OnInitializedAsync()
    {
        brandingSettings = await SettingsService.GetSettingsAsync();
        await LoadData();
        await InitializeSignalR();
    }

    private async Task LoadData()
    {
        await _loadDataSemaphore.WaitAsync();
        try
        {
            locations = (await LocationService.GetAllLocationsAsync()).ToList();
            alerts = (await AlertService.GetUnresolvedAlertsAsync()).ToList();

            var today = DateTime.UtcNow.Date;
            var todayUtc = DateTime.SpecifyKind(today, DateTimeKind.Utc);

            topProducts = (await OrderService.GetTopSellingProductsAsync(10, todayUtc)).ToList();
            totalSales = await OrderService.GetTotalSalesByDateAsync(todayUtc);
            var allOrders = await OrderService.GetOrdersByDateRangeAsync(todayUtc, todayUtc.AddDays(1));
            orderCount = allOrders.Count();

            totalLocations = locations.Count;

            var lowStockItems = await InventoryService.GetLowStockItemsAsync();
            lowStockCount = lowStockItems.Count();

            alertCount = alerts.Count;
        }
        finally
        {
            _loadDataSemaphore.Release();
        }
    }

    private async Task InitializeSignalR()
    {
        hubConnection = new HubConnectionBuilder()
            .WithUrl(Navigation.ToAbsoluteUri("/festivalhub"))
            .WithAutomaticReconnect()
            .Build();

        hubConnection.On<int, decimal, string>("ReceiveNewOrder", async (orderId, amount, vendorName) =>
        {
            await LoadData();
            await InvokeAsync(StateHasChanged);
        });

        hubConnection.On<int, string, int>("ReceiveLowStockAlert", async (productId, productName, currentStock) =>
        {
            await LoadData();
            await InvokeAsync(StateHasChanged);
        });

        hubConnection.On<int, bool>("ReceiveLocationStatusUpdate", async (locationId, isOpen) =>
        {
            await LoadData();
            await InvokeAsync(StateHasChanged);
        });

        await hubConnection.StartAsync();
    }

    private string GetSpotClass(Data.Models.Location? location)
    {
        if (location == null) return "empty";
        return "occupied";
    }

    private void NavigateToLocation(int? locationId)
    {
        if (locationId.HasValue)
        {
            Navigation.NavigateTo($"/locations/{locationId}");
        }
    }

    private async Task ResolveAlert(int alertId)
    {
        await AlertService.ResolveAlertAsync(alertId, "Dashboard User");
        await LoadData();
    }

    private string GetProductName(object product)
    {
        var type = product.GetType();
        var nameProp = type.GetProperty("ProductName");
        return nameProp?.GetValue(product)?.ToString() ?? "";
    }

    private int GetProductQuantity(object product)
    {
        var type = product.GetType();
        var qtyProp = type.GetProperty("TotalQuantity");
        return (int)(qtyProp?.GetValue(product) ?? 0);
    }

    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
        _loadDataSemaphore.Dispose();
    }
}
