@page "/locations"
@using FestHubCentral.Web.Services.Interfaces
@using FestHubCentral.Web.Data.Models
@using FestHubCentral.Web.Components.Shared
@inject ILocationService LocationService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Locations - FestHub Central</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h1>üè™ Location Management</h1>
            <p class="text-muted">Manage festival food and beverage locations</p>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="ShowAddLocationForm">
                Add New Location
            </button>
        </div>
    </div>

    @if (showForm)
    {
        <div class="section-card mb-4">
            <h3>@(editingLocation?.Id > 0 ? "Edit Location" : "Add New Location")</h3>
            <EditForm Model="@editingLocation" OnValidSubmit="SaveLocation">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Location Name</label>
                            <InputText class="form-control" @bind-Value="editingLocation!.Name" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <InputSelect class="form-control" @bind-Value="editingLocation!.Category">
                                <option value="Food">Food</option>
                                <option value="Beverage">Beverage</option>
                                <option value="Mixed">Mixed</option>
                            </InputSelect>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label class="form-label">Location Spot (1-15)</label>
                            <InputNumber class="form-control" @bind-Value="editingLocation!.LocationSpot" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Contact Person</label>
                            <InputText class="form-control" @bind-Value="editingLocation!.ContactPerson" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Contact Phone</label>
                            <InputText class="form-control" @bind-Value="editingLocation!.ContactPhone" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Contact Email</label>
                            <InputText class="form-control" @bind-Value="editingLocation!.ContactEmail" />
                        </div>
                    </div>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                </div>
            </EditForm>
        </div>
    }

    <div class="section-card">
        <h3 class="section-title">All Locations</h3>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Spot</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Contact</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var location in locations)
                    {
                        <tr>
                            <td><strong>@location.LocationSpot</strong></td>
                            <td>@location.Name</td>
                            <td><span class="badge bg-info">@location.Category</span></td>
                            <td>
                                @if (!string.IsNullOrEmpty(location.ContactPerson))
                                {
                                    <div>@location.ContactPerson</div>
                                    <small class="text-muted">@location.ContactPhone</small>
                                }
                                else
                                {
                                    <span class="text-muted">No contact</span>
                                }
                            </td>
                            <td>
                                <div class="table-actions">
                                    <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditLocation(location)">
                                        Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-info" @onclick="() => ViewLocation(location.Id)">
                                        View
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteLocation(location.Id)">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<Location> locations = new();
    private Location? editingLocation;
    private bool showForm = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadLocations();
    }

    private async Task LoadLocations()
    {
        locations = (await LocationService.GetAllLocationsAsync()).ToList();
    }

    private void ShowAddLocationForm()
    {
        editingLocation = new Location { Category = "Food" };
        showForm = true;
    }

    private void EditLocation(Location location)
    {
        editingLocation = new Location
            {
                Id = location.Id,
                Name = location.Name,
                Category = location.Category,
                LocationSpot = location.LocationSpot,
                ContactPerson = location.ContactPerson,
                ContactPhone = location.ContactPhone,
                ContactEmail = location.ContactEmail
            };
        showForm = true;
    }

    private void CancelEdit()
    {
        editingLocation = null;
        showForm = false;
    }

    private async Task SaveLocation()
    {
        if (editingLocation == null) return;

        if (editingLocation.Id == 0)
        {
            await LocationService.CreateLocationAsync(editingLocation);
        }
        else
        {
            await LocationService.UpdateLocationAsync(editingLocation);
        }

        await LoadLocations();
        CancelEdit();
    }

    private void ViewLocation(int locationId)
    {
        Navigation.NavigateTo($"/locations/{locationId}");
    }

    private async Task DeleteLocation(int locationId)
    {
        if (confirm("Are you sure you want to delete this location?"))
        {
            await LocationService.DeleteLocationAsync(locationId);
            await LoadLocations();
        }
    }

    private bool confirm(string message)
    {
        return true;
    }
}
