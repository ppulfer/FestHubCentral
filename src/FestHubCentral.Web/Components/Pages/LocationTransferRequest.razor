@page "/location-transfer-request"
@using FestHubCentral.Web.Data.Models
@using FestHubCentral.Web.Services.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILocationTransferRequestService TransferRequestService
@inject IProductLocationService ProductLocationService
@inject ILocationService LocationService
@inject ISettingsService SettingsService
@inject NavigationManager Navigation

<PageTitle>Request Transfer</PageTitle>

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/location-dashboard">Location Dashboard</a></li>
            <li class="breadcrumb-item active">Request Transfer</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Request Product Transfer</h5>
                </div>
                <div class="card-body">
                    @if (userLocation != null)
                    {
                        <EditForm Model="newRequest" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label">Your Location</label>
                                <input type="text" class="form-control" value="@userLocation.Name" readonly />
                            </div>

                            <div class="mb-3">
                                <label for="productId" class="form-label">Product <span class="text-danger">*</span></label>
                                <select id="productId" class="form-select" @bind="newRequest.ProductId" required>
                                    <option value="0">-- Select Product --</option>
                                    @if (availableProducts?.Any() == true)
                                    {
                                        @foreach (var product in availableProducts)
                                        {
                                            <option value="@product.Id">@product.Name (@product.Unit)</option>
                                        }
                                    }
                                </select>
                                <ValidationMessage For="() => newRequest.ProductId" />
                            </div>

                            <div class="mb-3">
                                <label for="toLocationId" class="form-label">Transfer To</label>
                                <select id="toLocationId" class="form-select" @bind="newRequest.ToLocationId">
                                    <option value="">-- Warehouse --</option>
                                    @if (availableLocations?.Any() == true)
                                    {
                                        @foreach (var loc in availableLocations.Where(l => l.Id != userLocation.Id))
                                        {
                                            <option value="@loc.Id">@loc.Name</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="amount" class="form-label">Amount <span class="text-danger">*</span></label>
                                <input id="amount" type="number" class="form-control" @bind="newRequest.Amount" min="1" required />
                                <ValidationMessage For="() => newRequest.Amount" />
                            </div>

                            <div class="mb-3">
                                <label for="comment" class="form-label">Comment (Optional)</label>
                                <textarea id="comment" class="form-control" @bind="newRequest.Comment" rows="3"></textarea>
                            </div>

                            @if (errorMessage != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @errorMessage
                                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                                </div>
                            }

                            @if (successMessage != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @successMessage
                                    <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                                </div>
                            }

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Submit Request</button>
                                <a href="/location-dashboard" class="btn btn-secondary">Cancel</a>
                            </div>
                        </EditForm>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <p>Your account is not associated with a location. Please contact the administrator.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">Info</h5>
                </div>
                <div class="card-body small">
                    <p><strong>What is a transfer request?</strong></p>
                    <p>Submit a transfer request to get additional inventory for your location. An administrator will review and approve your request.</p>
                    <p><strong>Status:</strong></p>
                    <ul class="list-unstyled">
                        <li><span class="badge bg-warning">Pending</span> - Waiting for review</li>
                        <li><span class="badge bg-success">Approved</span> - Request approved, transfer created</li>
                        <li><span class="badge bg-danger">Rejected</span> - Request rejected</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private AuthenticationState? authState;
    private Location? userLocation;
    private List<Product>? availableProducts;
    private List<Location>? availableLocations;
    private TransferRequest newRequest = new();
    private string? errorMessage;
    private string? successMessage;
    private int upcomingEventYear;

    protected override async Task OnInitializedAsync()
    {
        authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();

        if (authState?.User?.Identity?.IsAuthenticated == true)
        {
            var settings = await SettingsService.GetSettingsAsync();
            upcomingEventYear = settings?.UpcomingEventYear ?? DateTime.Now.Year;

            var userEmail = authState.User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;

            if (!string.IsNullOrEmpty(userEmail))
            {
                var user = await SettingsService.GetApplicationUserByEmailAsync(userEmail);
                if (user?.LocationId.HasValue == true)
                {
                    userLocation = await SettingsService.GetLocationByIdAsync(user.LocationId.Value);
                    newRequest.FromLocationId = userLocation.Id;
                    newRequest.EventYear = upcomingEventYear;

                    availableProducts = await SettingsService.GetAllProductsAsync();
                    availableLocations = await SettingsService.GetAllLocationsAsync();
                }
            }
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            if (userLocation == null)
            {
                errorMessage = "Unable to determine your location.";
                return;
            }

            var user = await SettingsService.GetApplicationUserByEmailAsync(authState?.User?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "");
            if (user == null)
            {
                errorMessage = "Unable to identify the current user.";
                return;
            }

            newRequest.RequestedByUserId = user.Id;
            await TransferRequestService.CreateRequestAsync(newRequest);

            successMessage = "Transfer request submitted successfully. An administrator will review it shortly.";
            newRequest = new() { FromLocationId = userLocation.Id, EventYear = upcomingEventYear };

            await Task.Delay(2000);
            Navigation.NavigateTo("/location-dashboard");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error submitting request: {ex.Message}";
        }
    }
}
