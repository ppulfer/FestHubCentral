@page "/location-transfer-request"
@using FestHubCentral.Web.Data.Models
@using FestHubCentral.Web.Services.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ILocationTransferRequestService TransferRequestService
@inject IProductLocationService ProductLocationService
@inject ILocationService LocationService
@inject ISettingsService SettingsService
@inject NavigationManager Navigation

<PageTitle>Request Transfer</PageTitle>

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/location-dashboard">Location Dashboard</a></li>
            <li class="breadcrumb-item active">Request Transfer</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Request Product Transfer</h5>
                </div>
                <div class="card-body">
                    @if (userLocation != null)
                    {
                        <EditForm Model="newRequest" OnValidSubmit="HandleSubmit" OnInvalidSubmit="HandleInvalidSubmit">
                            <DataAnnotationsValidator />

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">From (Staging Area)</label>
                                    <input type="text" class="form-control" value="@fromLocationName" readonly />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">To (Your Location)</label>
                                    <input type="text" class="form-control" value="@userLocation.Name" readonly />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Product <span class="text-danger">*</span></label>
                                @if (locationProducts?.Any() == true)
                                {
                                    <div class="btn-group-vertical w-100" role="group">
                                        @foreach (var product in locationProducts)
                                        {
                                            <button type="button" class="btn btn-outline-primary text-start @(newRequest.ProductId == product.Id ? "active" : "")" @onclick="() => newRequest.ProductId = product.Id">
                                                @product.Name (@product.Unit)
                                            </button>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <small class="text-danger d-block">No products assigned to your location for this event.</small>
                                }
                                @if (newRequest.ProductId <= 0 && submitAttempted)
                                {
                                    <div class="invalid-feedback d-block">Please select a product</div>
                                }
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Amount <span class="text-danger">*</span></label>
                                <div class="btn-group w-100" role="group">
                                    <button type="button" class="btn btn-outline-secondary @(newRequest.Amount == 1 ? "active" : "")" @onclick="() => newRequest.Amount = 1">1</button>
                                    <button type="button" class="btn btn-outline-secondary @(newRequest.Amount == 6 ? "active" : "")" @onclick="() => newRequest.Amount = 6">6</button>
                                    <button type="button" class="btn btn-outline-secondary @(newRequest.Amount == 24 ? "active" : "")" @onclick="() => newRequest.Amount = 24">24</button>
                                </div>
                                @if (newRequest.Amount <= 0 && submitAttempted)
                                {
                                    <div class="invalid-feedback d-block">Please select an amount</div>
                                }
                            </div>

                            <div class="mb-3">
                                <label for="comment" class="form-label">Comment (Optional)</label>
                                <textarea id="comment" class="form-control" @bind="newRequest.Comment" rows="3"></textarea>
                            </div>

                            @if (errorMessage != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    @errorMessage
                                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                                </div>
                            }

                            @if (successMessage != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    @successMessage
                                    <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                                </div>
                            }

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">Submit Request</button>
                                <a href="/location-dashboard" class="btn btn-secondary">Cancel</a>
                            </div>
                        </EditForm>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <p>Your account is not associated with a location. Please contact the administrator.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">Info</h5>
                </div>
                <div class="card-body small">
                    <p><strong>What is a transfer request?</strong></p>
                    <p>Submit a transfer request to get additional inventory for your location. An administrator will review and approve your request.</p>
                    <p><strong>Status:</strong></p>
                    <ul class="list-unstyled">
                        <li><span class="badge bg-warning">Pending</span> - Waiting for review</li>
                        <li><span class="badge bg-success">Approved</span> - Request approved, transfer created</li>
                        <li><span class="badge bg-danger">Rejected</span> - Request rejected</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private AuthenticationState? authState;
    private Location? userLocation;
    private List<Product>? locationProducts;
    private TransferRequest newRequest = new();
    private string? errorMessage;
    private string? successMessage;
    private string? debugMessage;
    private int upcomingEventYear;
    private int stagingAreaLocationId;
    private string? fromLocationName;
    private bool submitAttempted = false;

    protected override async Task OnInitializedAsync()
    {
        authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();

        if (authState?.User?.Identity?.IsAuthenticated == true)
        {
            var settings = await SettingsService.GetSettingsAsync();
            upcomingEventYear = settings?.UpcomingEventYear ?? DateTime.Now.Year;

            var userEmail = authState.User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;

            if (!string.IsNullOrEmpty(userEmail))
            {
                var user = await SettingsService.GetApplicationUserByEmailAsync(userEmail);
                if (user?.LocationId.HasValue == true)
                {
                    userLocation = await SettingsService.GetLocationByIdAsync(user.LocationId.Value);

                    stagingAreaLocationId = 26;
                    var stagingArea = await SettingsService.GetLocationByIdAsync(stagingAreaLocationId);
                    fromLocationName = stagingArea?.Name ?? "Staging Area";

                    newRequest.FromLocationId = stagingAreaLocationId;
                    newRequest.ToLocationId = userLocation.Id;
                    newRequest.EventYear = upcomingEventYear;

                    var allProductLocations = await ProductLocationService.GetProductLocationsByLocationAsync(userLocation.Id, upcomingEventYear);
                    var allProducts = await SettingsService.GetAllProductsAsync();

                    var productIds = allProductLocations.Select(pl => pl.ProductId).ToList();
                    locationProducts = allProducts.Where(p => productIds.Contains(p.Id)).ToList();
                }
            }
        }
    }

    private async Task HandleSubmit()
    {
        errorMessage = null;
        successMessage = null;

        try
        {
            if (userLocation == null)
            {
                errorMessage = "Unable to determine your location.";
                return;
            }

            if (newRequest.ProductId <= 0)
            {
                errorMessage = "Please select a valid product.";
                return;
            }

            if (newRequest.Amount <= 0)
            {
                errorMessage = "Amount must be greater than 0.";
                return;
            }

            var user = await SettingsService.GetApplicationUserByEmailAsync(authState?.User?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "");
            if (user == null)
            {
                errorMessage = "Unable to identify the current user.";
                return;
            }

            newRequest.RequestedByUserId = user.Id;

            Console.WriteLine($"Submitting request: ProductId={newRequest.ProductId}, FromLocationId={newRequest.FromLocationId}, ToLocationId={newRequest.ToLocationId}, Amount={newRequest.Amount}, UserId={newRequest.RequestedByUserId}");

            await TransferRequestService.CreateRequestAsync(newRequest);

            successMessage = "Transfer request submitted successfully. An administrator will review it shortly.";
            newRequest = new() { FromLocationId = stagingAreaLocationId, ToLocationId = userLocation.Id, EventYear = upcomingEventYear };

            await Task.Delay(2000);
            Navigation.NavigateTo("/location-dashboard");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error submitting request: {ex.Message}";
            Console.WriteLine($"Error submitting request: {ex}");
        }
    }

    private void OnButtonClick()
    {
        debugMessage = $"Button clicked! ProductId={newRequest.ProductId}, Amount={newRequest.Amount}, FromLocationId={newRequest.FromLocationId}, ToLocationId={newRequest.ToLocationId}";
        Console.WriteLine(debugMessage);
    }

    private void HandleInvalidSubmit()
    {
        submitAttempted = true;

        if (newRequest.ProductId <= 0)
        {
            errorMessage = "Error: Product field is required.";
        }
        else if (newRequest.Amount <= 0)
        {
            errorMessage = "Error: Amount field must be greater than 0.";
        }
        else
        {
            errorMessage = "Error: Please fill in all required fields correctly.";
        }

        debugMessage = $"Form invalid! ProductId={newRequest.ProductId}, Amount={newRequest.Amount}";
        Console.WriteLine("HandleInvalidSubmit called: " + debugMessage);
    }
}
