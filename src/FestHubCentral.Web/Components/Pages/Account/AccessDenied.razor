    }

    .access-denied-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        padding: 3rem 2.5rem;
        text-align: center;
        max-width: 450px;
    }

    .icon {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .access-denied-card h2 {
        color: #1e3a5f;
        margin-bottom: 1rem;
        font-size: 1.75rem;
    }

    .access-denied-card p {
        color: #5a6c7d;
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    .text-muted {
        color: #8a9ba8 !important;
        font-size: 0.9375rem;
        margin-bottom: 2rem !important;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        border-radius: 6px;
    }
